{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./lib/types",
    "noImplicitUseStrict": false,
    "checkJs": false,
    "allowJs": false,
    "esModuleInterop": true,
    "importHelpers": false,
    "baseUrl": "./",
    "paths": {
      "@": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "lib"]
}
